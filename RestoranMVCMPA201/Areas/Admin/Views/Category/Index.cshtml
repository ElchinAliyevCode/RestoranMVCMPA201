@model List<CategoryGetVM>
<div class="container">
	<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-success">Create</a>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<th scope="row">@category.Id</th>
						<td>@category.Name</td>
						<td>
							<a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
							<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger deleteBtn">Delete</a>
						</td>
					</tr>
				}
				

			</tbody>
		</table>
	</div>
</div>